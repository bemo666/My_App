<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currency_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/currency_cardview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/barelyGrey"
        app:contentPadding="5dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/currency_symbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="22sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:text="$" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/currency_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/currency_cardview"
        android:text="United States Dollar"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currency_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currency_full_name"
        android:layout_alignStart="@+id/currency_full_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:text="USD"
        android:textColor="@color/grey"
        android:textSize="14sp" />

</RelativeLayout>