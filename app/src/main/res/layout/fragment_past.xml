<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/past_trips_rv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginVertical="@dimen/spacing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_side"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/past_trip_frequency"
                android:textColor="@color/darkNavyBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp"
                app:contentPadding="15dp">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/trip_history_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:seriesColor="@color/blue"
                    app:seriesType="bar" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>