<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/trip_detail_date2"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        app:cardBackgroundColor="@color/greyShimmer" />

    <RelativeLayout
        android:id="@+id/trip_detail_non_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_detail_date2">

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_time2"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_line2"
            android:layout_width="2dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/trip_detail_card_view2"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardElevation="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_card_view2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/trip_detail_time2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/trip_detail_time2"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_name2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignTop="@id/trip_detail_card_view2"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/trip_detail_card_view2"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_address"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/trip_detail_name2"
            android:layout_alignStart="@id/trip_detail_name2"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/trip_detail_non_date3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_detail_non_date2"
        android:layout_marginVertical="3dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_time3"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_line3"
            android:layout_width="2dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/trip_detail_card_view3"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardElevation="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_card_view3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/trip_detail_time3"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/trip_detail_time3"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_name3"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignTop="@id/trip_detail_card_view3"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/trip_detail_card_view3"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/trip_detail_address3"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/trip_detail_name3"
            android:layout_alignStart="@id/trip_detail_name3"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            app:cardBackgroundColor="@color/greyShimmer"
            app:cardCornerRadius="5dp" />

    </RelativeLayout>
</RelativeLayout>