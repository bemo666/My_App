<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:id="@+id/left_side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="@dimen/circle_radius" />

        <View
            android:layout_width="2dp"
            android:layout_height="110dp"
            android:layout_below="@id/circle"
            android:layout_alignStart="@id/circle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#80B5B7C6" />

    </LinearLayout>


    <TextView
        android:id="@+id/dates2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/left_side"
        android:text="Mar 5 - Aug 8"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageHolder"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@+id/dates2"
        android:layout_alignStart="@id/dates2"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/card_radius_thin">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/london2" />
        <View
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:background="@drawable/card_mask_inverted" />

        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Place Name"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageHolder"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/imageHolder">

        <TextView
            android:id="@+id/stayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sheraton Hotel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/stayName"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/locationIcon"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/locationIcon"
            android:text="5th Ave, NY"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/locationIcon"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/callIcon"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/callIcon"
            android:text="+316-39383727"
            android:textSize="11sp" />


    </RelativeLayout>


</RelativeLayout>