<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/barelyGrey"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/flight_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_tbd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"/>


            <TextView
                android:id="@+id/flight_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_tbd"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/flight_collapsed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu, Oct 31"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/note_text_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:background="@color/transparent"
            android:hint="@string/ui_add_a_note"
            android:inputType="text|textLongMessage|textCapSentences"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>